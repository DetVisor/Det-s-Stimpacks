<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <HediffDef>
        <defName>IndustrialStimpackHediff</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>stimpack rush</label>
        <description>Stimpack-induced "high" which lowers the overall pain tolerance, and increases the regeneration rate.</description>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.5</severityPerDay>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>5500</disappearsAfterTicks>
				<showRemainingTime>True</showRemainingTime>
            </li>
        </comps>
        <stages>
            <li>
                <painOffset>-0.20</painOffset>
                <naturalHealingFactor>75</naturalHealingFactor>
                <totalBleedFactor>0.5</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>

</Defs>